<%- include('../components/header') %>
<div class="page-wrapper">
  <!-- ============================================================== -->
  <!-- Bread crumb and right sidebar toggle -->
  <!-- ============================================================== -->
  <div class="page-breadcrumb pb-5">
    <div class="container mt-5 bg-light border shadow">
      <% if(locals.success !="" ) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= locals.success %>
      </div>
      <% } %>
      <form action="/city/update" method="post" class="form-horizontal">
        <div class="card-body">
          <h4 class="card-title">Edit country</h4>
          <div class="form-group row">
            <input type="hidden" value="<%= single._id %>" name="id" />

            <label
              for="fname"
              class="col-sm-3 text-end control-label col-form-label"
              >country</label
            >

            <div class="col-sm-9">
              <select name="country" id="" class="form-control" value="">
                <% country.map((c,i)=>{ %>
                <option value="<%= c._id %>"><%= c.country %></option>
                <% }) %>
              </select>
            </div>
          </div>
          <div class="form-group row">
            <label
              for="fname"
              class="col-sm-3 text-end control-label col-form-label"
              >State</label
            >
            <div class="col-sm-9">
              <select name="state" id="" class="form-control" value="">
                <% state.map((sc,i)=>{ %>
                <option value="<%= sc._id %>"><%= sc.state %></option>
                <% }) %>
              </select>
            </div>
          </div>
          <div class="form-group row">
            <label
              for="fname"
              class="col-sm-3 text-end control-label col-form-label"
              >City</label
            >

            <div class="col-sm-9">
              <input
                type="text"
                name="city"
                class="form-control"
                id="fname"
                value="<%= single.city %>"
                placeholder="edit extra sub Category Here"
              />
            </div>
          </div>
        </div>
        <div class="border-top">
          <div class="card-body">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a href="/category" class="btn btn-info">View</a>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include('../components/footer') %>
